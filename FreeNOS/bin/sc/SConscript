Import('build_env')

env = build_env.Clone()
env.UseLibraries([ 'libposix', 'liballoc', 'libstd', 'libexec',
                   'libarch', 'libipc', 'libruntime', 'libapp', 'libfs' ])
env.UseLibraries([ 'libstd', 'libapp' ], 'host')
env.UseServers(['core'])
env.TargetHostProgram('sc', Glob('*.cpp'), env['bin'])